type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  babies: [Baby!]!
}

type Baby {
  id: ID! @id
  name: String!
  napEvents: [NapEvent!]!
  parent: User!
}

enum Status {
  COMPLETE
  ONGOING
  INCOMPLETE
}

enum Severity {
  LOW
  MEDIUM
  HEAVY
}

type NapEvent {
  id: ID! @id
  start: String! @unique
  end: String @unique
  status: Status!
  baby: Baby!
  slot: String
}


type Intervention {
  id: ID! @id
  timestamp: String! @unique
  napEvent: NapEvent!
  severity: Severity
}